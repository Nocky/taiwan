<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_peosoninfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.linkloving.taiwan.logic.UI.personal.PersonalInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@color/person_info_color">

        <!-- 头像 -->
        <com.linkloving.taiwan.logic.utils.CircleImageView
            android:id="@+id/user_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/default_avatar_m"
            app:border_width="2dp"
            app:border_color="@color/light"
            android:contentDescription="@string/imageView" />
    </RelativeLayout>

        <RelativeLayout
            android:background="@mipmap/bg_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/linear_name_account_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
         >
            <!--昵称帐号密码-->
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/linear_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/nick_name"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:gravity="center_vertical|right"
                        android:layout_gravity="bottom"
                        android:paddingRight="5dp"
                        android:id="@+id/text_nick_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/menu_deliver"
                    android:contentDescription="@string/imageView"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                android:id="@+id/linear_account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:text="@string/account"/>
                    <TextView
                        android:gravity="center_vertical|right"
                        android:paddingRight="5dp"
                        android:id="@+id/text_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/menu_deliver"
                    android:contentDescription="@string/imageView"/>
            </LinearLayout>
            <LinearLayout

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"

                android:id="@+id/linear_pwd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/pwd"
                        android:textSize="20dp"/>
                    <TextView
                        android:gravity="center_vertical|right"
                        android:id="@+id/text_pwd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

         </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:id="@+id/linear_sex_bir_lenth"
           android:layout_below="@+id/linear_name_account_pwd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/white"
         >
           <!--性别,生日,身高-->
           <LinearLayout
               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"


               android:id="@+id/linear_sex"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="vertical">
               <LinearLayout

                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:textSize="20dp"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:text="@string/sex"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:paddingRight="5dp"
                       android:id="@+id/text_sex"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/menu_deliver"
                   android:contentDescription="@string/imageView"/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"


               android:id="@+id/linear_birthday"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:textSize="20dp"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:text="@string/birthday"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:paddingRight="5dp"
                       android:id="@+id/text_birthday"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@drawable/menu_deliver"
                   android:contentDescription="@string/imageView"/>
           </LinearLayout>
           <LinearLayout

               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"

               android:id="@+id/linear_lenth"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">
                   <TextView
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:textSize="20dp"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"
                       android:text="@string/lenth"/>
                   <TextView
                       android:gravity="center_vertical|right"
                       android:paddingRight="5dp"
                       android:id="@+id/text_lenth"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"/>
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:id="@+id/linear_sign"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/linear_sex_bir_lenth"
           android:background="@color/white"
           >
           <!--个性签名-->
           <LinearLayout
               android:layout_marginRight="20dp"
               android:layout_marginLeft="20dp"
               android:layout_gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               <TextView
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="@string/sign"
                   android:textSize="20dp"
                   android:layout_weight="1"/>
                <TextView
               android:gravity="center_vertical|right"
               android:id="@+id/text_sign"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:paddingRight="5dp"
              />
               </LinearLayout>

           </LinearLayout>
       </LinearLayout>



        </RelativeLayout>



    </LinearLayout>



</RelativeLayout>
